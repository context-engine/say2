{
	"name": "say2",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"dev": "bun run --filter '*' dev",
		"build": "bun run --filter '*' build",
		"test": "bun test",
		"test:coverage": "bun test --coverage",
		"test:mutate": "stryker run",
		"test:mutate:dry": "stryker run --dryRunOnly",
		"test:all": "bun test --coverage && stryker run",
		"lint": "biome check .",
		"lint:test": "biome check packages/*/src/*.test.ts packages/*/src/**/*.test.ts",
		"format": "biome format --write .",
		"check": "biome check --write .",
		"quality": "bun test --coverage && biome check . && echo 'âœ… All quality checks passed'"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.11",
		"@stryker-mutator/core": "^9.4.0",
		"@stryker-mutator/typescript-checker": "^9.4.0",
		"@types/bun": "^1.3.5"
	}
}
