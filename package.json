{
	"name": "say2",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"dev": "bun run --filter '*' dev",
		"build": "bun run --filter '*' build",
		"test": "bun test",
		"test:coverage": "bun test --coverage",
		"test:mutate": "stryker run",
		"test:mutate:dry": "stryker run --dryRunOnly",
		"test:property": "bun test packages/*/src/**/*.property-based.test.ts packages/*/src/**/property-based.test.ts",
		"test:density": "bun run scripts/check-assertion-density.ts",
		"test:all": "bun test --coverage && bun run test:density",
		"lint": "biome check .",
		"lint:test": "biome check packages/*/src/*.test.ts packages/*/src/**/*.test.ts",
		"format": "biome format --write .",
		"check": "biome check --write .",
		"quality": "bun test --coverage && bun run test:density && biome check . && echo '✅ All quality checks passed'",
		"quality:full": "bun test --coverage && bun run test:density && biome check . && stryker run && echo '✅ Full quality gate passed'"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.11",
		"@stryker-mutator/core": "^9.4.0",
		"@stryker-mutator/typescript-checker": "^9.4.0",
		"@types/bun": "^1.3.5",
		"fast-check": "^4.5.3"
	}
}
